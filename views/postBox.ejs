<form action="/jobPosterProfile/postBox" class="form" method="POST">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header" style="background-color: #3e8da8;color: white;">
            <h3 class="card-title text-center" ><b>Create Post</b></h3>
          </div>
          <div class="card-body">
            <div class="form-group">
              <textarea id="text" name="text" rows="4" class="form-control"></textarea>
            </div>
            <div class="form-group my-3">
              <label for="category">Category:</label>
              <select id="category" name="category" class="form-select">
                <% for(var i=0;i<category.length;i++) {%>
                  <option value="<%=category[i].categoryName%>">
                    <%=category[i].categoryName%>
                  </option>
                  <% } %>
              </select>
            </div>
            <div class="form-group my-3">
              <label for="location">Add location:</label>
              <input type="hidden" id="location" name="location" class="form-control">


              <!-- Button to Open Modal -->
              <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#locationModal" style="color:red;background-color: #3e8da8;">
                <i class="fa-sharp fa-solid fa-location-dot"></i>
              </button>

              <!-- Modal -->
              <div class="modal fade" id="locationModal" tabindex="-1" aria-labelledby="locationModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div class="input-group mb-3">
                        <input id="location-input" type="text" class="form-control" placeholder="Enter a location">
                        <button class="btn btn-outline-secondary" type="button" onclick="showLocation()">
                          Show Location
                        </button>
                        <button class="btn btn-outline-secondary" type="button" onclick="getCurrentLocation()">
                          My Location <i class="fas fa-location-arrow"></i>
                        </button>
                      </div>
                      <div id="map"></div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="d-grid mt-3">
              <button id="submit-post" class="btn" type="submit" style="background-color:#3e8da8;"><b>Submit</b></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
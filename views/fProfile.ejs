<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/postBox.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="../css/navbar.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <title>Profile</title>
</head>

<body>

    <header>
        <%- include('../views/header2'); %>
    </header>

    <main>
        <div class="container-lg" style="margin-top: 5%;">
            <div class="row">
                <!--Div for profile -->
                <div class="col-md-5 col-lg-4 bg-white">
                    <div class="m-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex">
                                    <% if (verifyProfile.length==0) { %>
                                        <button type="button" class="btn btn-primary ms-0" data-bs-toggle="modal"
                                            data-bs-target="#verifyModal">
                                            Verify your profile
                                        </button>
                                        <% } else if (verifyProfile[0].status==1) { %>
                                            <button type="button" class="btn btn-primary ms-0">
                                                Pending
                                            </button>
                                            <% } %>


                                                <button type="button" class="btn btn-light ms-auto"
                                                    data-bs-toggle="modal" data-bs-target="#editProfileModal">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </button>
                                                <!-- Modal -->
                                                <div class="modal fade" id="editProfileModal" data-bs-backdrop="static"
                                                    data-bs-keyboard="false" tabindex="-1"
                                                    aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content">
                                                            <form action="/profileInfoUpdate" method="POST"
                                                                enctype="multipart/form-data">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="staticBackdropLabel">
                                                                        Edit
                                                                        profile
                                                                    </h5>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <label for="name"
                                                                            class="form-label">Name</label>
                                                                        <input class="form-control" id="name"
                                                                            name="name" value="<%= data[0].name %>">
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="profile-picture"
                                                                            class="form-label">Profile
                                                                            Picture</label>
                                                                        <input class="form-control mb-3" type="hidden"
                                                                            id="name" name="image"
                                                                            value="<%= data[0].image %>">
                                                                        <input type="file" class="form-control"
                                                                            id="profile-picture" name="picture"
                                                                            accept=".png, .jpg, .jpeg">
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="bio" class="form-label">Bio</label>
                                                                        <textarea class="form-control" id="bio" rows="3"
                                                                            name="bio"> <%= data[0].bio %> </textarea>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="description"
                                                                            class="form-label">Description</label>
                                                                        <textarea class="form-control" id="description"
                                                                            rows="5"
                                                                            name="description"> <%= data[0].description %> </textarea>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="address"
                                                                            class="form-label">Address</label>
                                                                        <input type="text" class="form-control"
                                                                            id="address" name="address"
                                                                            value="<%=data[0].address %>">
                                                                    </div>

                                                                    <div class="mb-3">
                                                                        <label for="email"
                                                                            class="form-label">Email</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text"><i
                                                                                    class="fas fa-envelope"></i></span>
                                                                            <input type="email" class="form-control"
                                                                                id="email" name="email"
                                                                                value="<%=data[0].email %>">
                                                                        </div>
                                                                    </div>

                                                                    <div class="mb-3">
                                                                        <label for="facebook"
                                                                            class="form-label">Facebook</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text"><i
                                                                                    class="fab fa-facebook"></i></span>
                                                                            <input type="text" class="form-control"
                                                                                id="facebook" name="facebook"
                                                                                value="<%=data[0].facebook %>">
                                                                        </div>
                                                                    </div>

                                                                    <div class="mb-3">
                                                                        <label for="whatsapp"
                                                                            class="form-label">Whatsapp</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text"><i
                                                                                    class="fab fa-whatsapp"></i></span>
                                                                            <input type="text" class="form-control"
                                                                                id="whatsapp" name="whatsapp"
                                                                                value="<%=data[0].whatsapp %>">
                                                                        </div>
                                                                    </div>

                                                                    <div class="mb-3">
                                                                        <label for="twitter"
                                                                            class="form-label">Twitter</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text"><i
                                                                                    class="fab fa-twitter"></i></span>
                                                                            <input type="text" class="form-control"
                                                                                id="twitter" name="twitter"
                                                                                value="<%=data[0].twitter %>">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">Close</button>
                                                                    <button type="submit"
                                                                        class="btn btn-primary">Save</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="modal fade" id="verifyModal" tabindex="-1"
                                                    aria-labelledby="verifyModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="verifyModalLabel">Verify
                                                                    your
                                                                    profile
                                                                </h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="/verifyProfile" method="POST"
                                                                    enctype="multipart/form-data">
                                                                    <div class="mb-3">
                                                                        <label for="nid" class="form-label">NID
                                                                            Number</label>
                                                                        <input type="text" class="form-control" id="nid"
                                                                            name="nid_number">
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="pic" class="form-label">NID
                                                                            Picture</label>
                                                                        <input type="file" class="form-control" id="pic"
                                                                            name="nid_pic">
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="tln" class="form-label">Trade
                                                                            License
                                                                            Number</label>
                                                                        <input type="text" class="form-control" id="tln"
                                                                            name="tln">
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="tlpic" class="form-label">Trade
                                                                            License
                                                                            Picture</label>
                                                                        <input type="file" class="form-control"
                                                                            id="tlpic" name="tl_pic">
                                                                    </div>

                                                                    <div class="modal-footer justify-content-center">
                                                                        <button type="submit"
                                                                            class="btn btn-primary"><strong>submit</strong></button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                </div>

                                <div class="d-flex flex-column align-items-center text-center mt-5">
                                    <img src="<%= data[0].image %>" alt="Admin" class="rounded-circle" width="150"
                                        height="150">

                                    <div class="mt-3 text-black">
                                        <h4>
                                            <%= data[0].name %>
                                                <% if(verifyProfile.length !=0 && verifyProfile[0].status==2) { %>
                                                    <i class="fas fa-check-circle text-primary"></i>
                                                    <% } else {%>
                                                        <i class="fas fa-check-circle "></i>
                                                        <% } %>
                                        </h4>

                                        <p class="mb-1 text-black-50">
                                            <%= data[0].bio %>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                                <table class="table border-white text-black-50">
                                    <tr>
                                        <td class="d-inline-block" scope="row"> <i
                                                class="fa-solid fa-location-dot d-inline-block me-2"></i>From</td>
                                        <td scope="row">
                                            <%= data[0].address %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td scope="row" class="d-inline-block"><i
                                                class="fa-solid fa-user d-inline-block me-2"></i>joined</td>
                                        <td scope="row">
                                            <%= new Date(data[0].createTime).toLocaleDateString("en-US", { month: "long"
                                                , day: "numeric" , year: "numeric" }); %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td scope="row" class="d-inline-block"><i
                                                class="fa-solid fa-users d-inline-block me-2"></i></i>Gender</td>
                                        <td scope="row">
                                            <%= data[0].gender %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <div class="card-body">
                                <div>
                                    <h5 class="card-title  ">Description</h5>
                                    <p class="card-text my-4 text-black-50">
                                        <%= data[0].description %>
                                    </p>
                                </div>
                                <hr>
                                <div class="my-4">
                                    <h5 class="card-title">Linked Accounts</h5>
                                    <ul class="list-group">
                                        <li class="list-group-item border-0"><a
                                                class="text-decoration-none text-black-50" href="#"><i
                                                    class="fas fa-envelope me-2"></i>
                                                <%= data[0].email %>
                                            </a></li>
                                        <li class="list-group-item border-0"><a
                                                class="text-decoration-none text-black-50" href="#"><i
                                                    class="fa-brands fa-twitter me-2"></i>
                                                <%= data[0].twitter %>
                                            </a></li>
                                        <li class="list-group-item border-0"><a
                                                class="text-decoration-none text-black-50" href="#"><i
                                                    class="fa-brands fa-facebook me-2"></i>
                                                <%= data[0].facebook %>
                                            </a></li>
                                        <li class="list-group-item border-0"><a
                                                class="text-decoration-none text-black-50" href="#"><i
                                                    class="fa-brands fa-whatsapp me-2"></i>
                                                <%= data[0].whatsapp %>
                                            </a></li>
                                    </ul>
                                </div>
                                <hr>
                                <div class="my-4">
                                    <div class="my-4 d-flex justify-content-between align-items-center">
                                        <h5 class="card-title d-inline-block">Skills</h5>
                                        <div>
                                            <div class="dropdown">
                                                <a class="btn btn-light" href="#" role="button"
                                                    id="skilldropdownMenuLink" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                <ul class="dropdown-menu" aria-labelledby="skilldropdownMenuLink">
                                                    <li><a class="dropdown-item" data-bs-toggle="modal"
                                                            data-bs-target="#addModal" href="#">Add skills</a></li>
                                                    <li><a class="dropdown-item" data-bs-toggle="modal"
                                                            data-bs-target="#removeModal" href="#">Remove skills</a>
                                                    </li>

                                                </ul>

                                                <!-- Modal -->
                                                <div class="modal fade" id="addModal" tabindex="-1"
                                                    aria-labelledby="addModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="addModalLabel">Add skills
                                                                </h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="/addSkile" method="POST">
                                                                    <!-- Replace "/your-backend-endpoint" with the actual endpoint URL -->
                                                                    <div class="mb-3">
                                                                        <div class="mb-3">
                                                                            <select class="form-select" id="category"
                                                                                name="addSkill">
                                                                                <% for(var i=0; i<category.length; i++)
                                                                                    { %>
                                                                                    <option value="<%= category[i] %>">
                                                                                        <%= category[i] %>
                                                                                    </option>
                                                                                    <% } %>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer justify-content-center">
                                                                        <button type="submit"
                                                                            class="btn btn-primary"><strong>Add</strong></button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal fade" id="removeModal" tabindex="-1"
                                                    aria-labelledby="removeLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="removeLabel">Remove skills
                                                                </h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="/removeSkile" method="POST">

                                                                    <div class="mb-3">
                                                                        <div class="mb-3">
                                                                            <select class="form-select" id="skills"
                                                                                name="removeSkill">
                                                                                <% for(var i=0; i<skills.length; i++) {
                                                                                    %>
                                                                                    <option
                                                                                        value="<%= skills[i].skill %>">
                                                                                        <%= skills[i].skill %>
                                                                                    </option>
                                                                                    <% } %>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer justify-content-center">
                                                                        <button type="submit"
                                                                            class="btn btn-primary"><strong>remove</strong></button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <% for(var i=0;i<skills.length;i++ ){ %>
                                        <button class="btn m-1 btn-outline-secondary text-black-50 rounded-pill">
                                            <%= skills[i].skill %>
                                        </button>
                                        <% } %>
                                </div>
                                <hr>
                                <div class="my-4 d-flex justify-content-between align-items-center">
                                    <h5 class="card-title d-inline-block">Education</h5>
                                    <div>
                                        <div class="dropdown">
                                            <a class="btn btn-light" href="#" role="button" id="edudropdownMenuLink"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <ul class="dropdown-menu" aria-labelledby="edudropdownMenuLink">
                                                <li><a class="dropdown-item" data-bs-toggle="modal"
                                                        data-bs-target="#addeduModal" href="#">Add education</a></li>
                                                <li><a class="dropdown-item" data-bs-toggle="modal"
                                                        data-bs-target="#removeeduModal" href="#">Remove education</a>
                                                </li>

                                            </ul>

                                            <!-- Modal -->
                                            <div class="modal fade" id="addeduModal" tabindex="-1"
                                                aria-labelledby="addeduModalModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="addeduModalModalLabel">Add
                                                                education
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form action="/addEdu" method="POST">
                                                                <div class="mb-3">
                                                                    <label for="degree"
                                                                        class="form-label">Degree</label>
                                                                    <input type="text" class="form-control" id="degree"
                                                                        name="degree">
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label for="institute"
                                                                        class="form-label">Institute</label>
                                                                    <input type="text" class="form-control"
                                                                        id="institute" name="institute">
                                                                </div>

                                                                <div class="modal-footer justify-content-center">
                                                                    <button type="submit"
                                                                        class="btn btn-primary"><strong>Add</strong></button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal fade" id="removeeduModal" tabindex="-1"
                                                aria-labelledby="removeeduLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="removeeduLabel">Remove education
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form action="/removeEdu" method="POST">
                                                                <div class="mb-3">
                                                                    <ul class="list-group">
                                                                        <% for(var i=0; i<education.length; i++) { %>
                                                                            <li
                                                                                class="list-group-item border-0 d-flex align-items-center justify-content-between">
                                                                                <div>
                                                                                    <i
                                                                                        class="fa-solid fa-graduation-cap me-2"></i>
                                                                                    <%= education[i].degree %>, <%=
                                                                                            education[i].institute %>
                                                                                </div>
                                                                                <button type="submit"
                                                                                    class="btn btn-danger" name="edu"
                                                                                    value="<%= i %>">
                                                                                    <i
                                                                                        class="fas fa-trash-alt delete-icon"></i>
                                                                                </button>
                                                                            </li>
                                                                            <% } %>
                                                                    </ul>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <ul class="list-group">
                                    <% for(var i=0; i<education.length; i++) { %>
                                        <li class="list-group-item border-0 text-black-50 my-0">
                                            <i class="fa-solid fa-graduation-cap me-2"></i>
                                            <%= education[i].degree %>, <%= education[i].institute %>

                                        </li>
                                        <% } %>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>


                <!-- pagination -->
                <div class="col-md-7 col-lg-8">
                    <div class="card mt-2">
                        <div class="card-body">
                            <div class="card-title text-center">
                                <p class="d-inline-block me-2 text-success">
                                    <b>
                                        <%= reviews %> reviews for this seller
                                    </b>
                                </p>
                                <% for (var i=0; i < 5; i++) { %>
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <% } %>
                            </div>

                            <% for (var i=0; i < ratings.length; i++) { %>
                                <div class="review-section">
                                    <div class="text-success d-inline-flex mx-3">
                                        <p class="text"><strong>
                                                <%= ratings[i].stars %> <i class="fa-solid fa-star text-success"></i>
                                            </strong></p>
                                    </div>
                                    <div class="progress w-75 d-inline-flex">
                                        <div class="progress-bar bg-success" role="progressbar"
                                            style="width: <%= ratings[i].percentage %>%"
                                            aria-valuenow="<%= ratings[i].percentage %>" aria-valuemin="0"
                                            aria-valuemax="100">
                                        </div>
                                    </div>
                                    <div class="text-success d-inline-flex ms-3"><strong>(<%= ratings[i].count %>
                                                )</strong></div>
                                </div>
                                <% } %>
                        </div>
                    </div>

                    <!-- reviews section -->
                    <% for(var i=rating.length-1;i>=0;i-- ){ %>

                        <hr>
                        <div class="d-flex">
                            <!-- Image -->
                            <a href="#"> <img src="<%= rating[i].clientPic %>" alt="<%= rating[i].clientName %>"
                                    class="mt-2 me-3 rounded-circle" style="width: 60px; height: 60px;" />
                            </a>
                            <!-- Body -->
                            <div>
                                <h5 class="fw-bold mb-0">
                                    <%= rating[i].clientName %><br>
                                </h5>
                                <small class="text-muted">Posted on <%= new
                                        Date(rating[i].createTime).toLocaleDateString("en-US", { month: "long" ,
                                        day: "numeric" , year: "numeric" }); %></small>
                                <div class="icon m-0 mb-2">
                                    <% for (let j=0; j < 5; j++) { %>
                                        <% if (j < rating[i].star ) { %>
                                            <i class="fa-solid fa-star text-warning"></i>
                                            <% } else { %>
                                                <i class="fa-solid fa-star text-secondary"></i>
                                                <% } %>
                                                    <% } %>
                                </div>

                                <p class="my-2">
                                    <%= rating[i].text %>
                                </p>
                            </div>
                        </div>
                        <% } %>
                            <hr>
                </div>
            </div>
        </div>
        </div>
    </main>

    <footer>
        <%- include('../views/footer'); %>
    </footer>
    <script src="../javascript/navbar.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>
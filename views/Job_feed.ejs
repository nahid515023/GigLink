<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../css/navbar.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
   
    <title>Jobs</title>
</head>

<body>

    <header>
        <%- include('../views/header2'); %>
    </header>

    <body>
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10 m-5 ">
                    <div class="search-bar">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control border-dark input-text" placeholder="Search for jobs"
                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-outline-dark btn-lg" type="button"><i
                                        class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>

                    <% for(var i=posts.length-1;i>=0 ; i--){ %>

                        <div class="card mt-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">

                                    <img src="<%= posts[i].image %>" class="rounded-circle me-2 mt-0"
                                        alt="profile picture" width="80px" height="80px">

                                    <div class="text-gray" style="line-height:1.3em">
                                        <a href="/clientProfile/view/<%= posts[i].jobPosterId %>"
                                            class="text-black text-decoration-none">
                                            <h5 class="card-title mb-0">
                                                <%= posts[i].name %>
                                            </h5>
                                        </a>


                                        <i class="fa-solid fa-shop me-1"></i>
                                        <a href="#" class="text-muted text-decoration-none"><small>
                                                <%= posts[i].category %>
                                            </small></a>
                                        <br>
                                        <i class="fa-solid fa-location-dot me-2"></i>
                                        <p class="card-subtitle text-muted d-inline-block ">
                                            <small>
                                                <%= dist[i] %>
                                            </small>
                                        </p>
                                        <br>
                                        <i class="fa-solid fa-clock me-1"></i>
                                        <p class="card-subtitle mb-2 text-muted d-inline-block "><small>
                                                <%= new Date(posts[posts.length-i-1].postTime).toLocaleString() %>
                                            </small></p>
                                    </div>
                                </div>
                                <a href="/jobFeed/<%= posts[i].postId %>" class="text-decoration-none"
                                    style="color:rgba(0, 0, 0, 0.738)">
                                    <div class="mx-3 p-3">
                                        <p class="card-text">
                                            <%= posts[i].text %>
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </body>

    <footer>
        <%- include('../views/footer'); %>
    </footer>

    <script src="../javascript/navbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>